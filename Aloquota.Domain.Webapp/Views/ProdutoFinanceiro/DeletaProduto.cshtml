@model Aliquota.Domain.Webapp.Models.ProdutoFinanceiroViewModel

<h3>Deletar</h3>

<hr />
<form asp-action="DeletaProduto">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Valor" class="control-label"></label>
        <input asp-for="Valor" class="form-control" readonly></input>
    </div>

    <div class="form-group">
        <label asp-for="DataAplicacao" class="control-label"></label>
        <input asp-for="DataAplicacao" class="form-control" type="date" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ClienteId" class="control-label"></label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId" readonly></select>
    </div>

    <div class="form-group" style="padding-top: 10px">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</form>