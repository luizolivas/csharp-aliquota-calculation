@model IEnumerable<Aliquota.Domain.Webapp.Models.ClienteViewModel>

<h2>Clientes</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="NovoCliente" class="btn btn-primary">
                    <span title="Create New" class="fas fa-plus"></span> Adicionar
                </a>
            </div>
        </div>
    </div>
</div>

<br />

<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a asp-action="AtualizaCliente" asp-route-id="@item.Id" title="Edita" class="btn btn-warning">
                            <span class="fas fa-edit"></span> Atualizar
                        </a>
                        <a asp-action="DeletaCliente" asp-route-id="@item.Id" title="Deleta" class="btn btn-danger">
                            <span class="fas fa-trash-alt"></span> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
